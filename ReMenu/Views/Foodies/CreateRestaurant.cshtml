@model ReMenu.Models.Restaurant

@{
    ViewData["Title"] = "CreateRestaurant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-black-50 pl-3">Add a New Restaurant!</h2>

<hr />
