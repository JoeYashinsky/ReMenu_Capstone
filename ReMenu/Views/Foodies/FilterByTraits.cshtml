@model IEnumerable<ReMenu.Models.Meal>

@{
    ViewData["Title"] = "FilterByTraits";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Meals By Category and Rank</h2>
<p>Let's find what you're looking for!</p>

<form asp-action="FilterByTraits">
    
<div class="form-group">
    <label for="Category">Category</label>
    <select id="Category" name="Category">
        <option value="Appetizer">Appetizer</option>
        <option value="Breakfast">Breakfast</option>
        <option value="Fish">Fish</option>
        <option value="Meat">Meat</option>
        <option value="Pasta">Pasta</option>
        <option value="Pizza">Pizza</option>
        <option value="Salad">Salad</option>
        <option value="Sandwich">Sandwich</option>
        <option value="Soup">Soup</option>
        <option value="Sushi">Sushi</option>
        <option value="Vegetarian">Vegetarian</option>
    </select>
</div>

<div class="form-group">
    <label for="Rating">Rating</label>
    <select id="Rating" name="Rating">
        <option value="5">5</option>
        <option value="4">4</option>
        <option value="3">3</option>
        <option value="2">2</option>
        <option value="1">1</option>
    </select>
</div>
<div class="form-group">
    <input type="submit" value="Submit" class="btn btn-primary" />
</div>

</form>


<table class="table" table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.MealPicture)</th>
            <th>@Html.DisplayNameFor(model => model.FoodOrder)</th>
            <th>@Html.DisplayNameFor(model => model.Category)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Rating)</th>
            <th>@Html.DisplayNameFor(model => model.FutureModification)</th>
            <th>@Html.DisplayNameFor(model => model.FutureOrder)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            {
                <tr>
                    <td>
                        <img src="~/Images/@item.MealPicture"
                             class="w3-round"
                             height="150" width="100"
                             asp-append-version="true" />
                    </td>
                    <td>@item.FoodOrder</td>
                    <td>@item.Category</td>
                    <td>@item.Price</td>
                    <td>@item.Rating</td>
                    <td>@item.FutureModification</td>
                    <td>@item.FutureOrder</td>
                </tr>
            }


        }
        
    </tbody>
</table>

<div>
    <a asp-action="ViewAllMeals">Back to List</a>
</div>
